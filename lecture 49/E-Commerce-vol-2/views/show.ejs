<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/star.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>show a particular product</h1>
    <section class="row">
    <div class="col-6 border">
        <h1><%=foundProduct.name%></h1>
        <img src="<%=foundProduct.img%>" alt="">
        <h2><%=foundProduct.price%></h2>
         <p><%=foundProduct.description%></p>
    </div>
    
  <div class="col-6 border">
   <h1>Rating form</h1>
   <form action="/products/<%=foundProduct._id%>/rating" method="POST">
    <label for="star">Rating: </label>
    <!-- <input type="range" min="0" max="5" id="star" name="rating"> -->
    <fieldset class="starability-basic">
      <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="rating" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="rating" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="rating" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="rating" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="rating" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
     <br>
    <label for="text">Comment: </label>
    <textarea name="comment" cols="30" rows="5" id="text"></textarea>
    <button>Add Review</button>
   </form>
  </div>
<div class="border">
  <%for(let review of foundProduct.reviews){%>
    <h2>Rating: </h2>
    <p class="starability-result" data-rating="3">
      Rated: <%=review.rating%> stars
    </p>
    <h3>Comment: <%=review.comment%></h3>
   <% if(review.createdAt){%>
    <h6>Time: <%=review.createdAt.toDateString()%></h6>
  <% }%>
 <% }%>
</div>
</section>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>
</html>