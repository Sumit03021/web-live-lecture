<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>

<div class="row" style="margin-top: 80px;">
  <div class="col-6 mx-auto">
    <h1 class="display-6">Login Form</h1>
    <form action="/login" method="POST" >
      <div class="row g-3 align-items-center mt-1">
        <div class="col-3">
          <label for="username" class="form-label">Username: </label>
        </div>
        <div class="col-9">
          <input type="text" class="form-control text-center" name="username" id="username" placeholder="Name of the User" required>
        </div>
      </div>
      <div class="row g-3 align-items-center mt-1">
        <div class="col-3">
          <label for="password" class="form-label">Password: </label>
        </div>
        <div class="col-9">
          <input type="password" class="form-control text-center"  name="password" id="password" placeholder="Password of the User" required>
        </div>
      </div>
      <div class="row g-3 align-items-center justify-content-center mt-1">
     <div class="col-3">
  <button type="submit" class="btn btn-sm btn-success">login</button>
    </div>
      </div>
      
      <p>Don't have an account? <a href="/register">Signup Now</a></p>
    </form>
  </div>
</div>

<%-include('../partials/footer')%>


