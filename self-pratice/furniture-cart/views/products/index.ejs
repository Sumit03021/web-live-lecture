<%-include('../partials/header')%>
<%-include('../partials/navbar')%>  
<%-include('../partials/flash')%>


<section class="container-fluid position-item1 mt-2">
<div class="row g-3">
<%  for(let item of products){ %>
    <div class="col-4">
      <div class="card">
        <img src="<%=item.frontImg%>" alt="">
      <div class="card-body">
      <h5 class="d-inline card-title"><%=item.name%></h5>
      <span class="btn like-btn" productId="<%=item._id%>">
        <% if(currentUser && currentUser.wishList.includes(item._id)){ %>
         <i class="fa-solid fa-heart"></i>
        <% }else{ %>
         <i class="fa-regular fa-heart"></i>
        <% } %>
      </span>
      <h5 class="card-title">Rs. <%=item.price%></h5>
      <a href="/products/<%=item._id%>"><button class="btn btn-info">View Detail</button></a>
    <%  if(currentUser && currentUser.role == 'seller'){ %>
        <a href="/products/<%=item._id%>/edit"><button class="btn btn-warning">Edit</button></a>
        <form class="d-inline" action="/products/<%=item._id%>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
     <% } %>
      </div>
      </div>
    </div>
<%  } %>

</div>


</section>
<script src="/js/common.js"></script>
<%-include('../partials/footer')%>